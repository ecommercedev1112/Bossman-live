<div class="home row featured-on">
	<div class="featured-on_logos">
		<h3> {{section.settings.title}} </h3>
		<div class="featured-on-logos">
			{% for block in section.blocks %}
			{% render 'responsive-image' with image: block.settings.logo_img %}
			
			{% endfor %}
		</div>
		<div class="wholefoods">
			<h3> {{section.settings.wf_title}} </h3>
			{% render 'responsive-image' with image: section.settings.wf_logo_img %}
		</div>
   </div>
   <div class="featured-on_reviews">
	<h2>{{ section.settings.reviews_title }}</h2>
	<div><span class="featured-on_stars"></span> <span class="reviews_count">4.9/5</span> </div>
	<a href="{{ section.settings.reviews_link }}">{{ section.settings.reviews_text }}</a>
   </div>
</div>

{% schema %}
{
	"name": "Featured",
	"settings": [
		{
			"type": "text",
			"id": "title",
			"label": "Title"
		},
        {
            "type": "text",
            "id": "trust_title",
            "label": "Trust Title"
        },
        {
            "type": "image_picker",
            "id": "trust_img",
            "label": "Trust Logo"
        },
		{
			"type": "text",
			"id": "reviews_title",
			"label": "Reviews title",
			"default": "Over 10,000 beards have spoken"
		},
		{
			"type": "text",
			"id": "reviews_text",
			"label": "label",
			"default": "Read Reviews"
		},
		{
			"type": "url",
			"id": "reviews_link",
			"label": "Reviews Link"
		},
		{
			"type": "text",
			"id": "wf_title",
			"label": "Whole Foods Text"
		},
		{
			"type": "image_picker",
			"id": "wf_logo_img",
			"label": "Whole Foods Logo"
		}
	],
	"blocks": [
		{
			"type": "logo",
			"name": "Logo",
			"settings": [
				{
					"type": "image_picker",
					"id": "logo_img",
					"label": "Logo Image"
				}
			]
		}
	],
  "presets": [
        {
            "name": "Featured",
            "category": "Banner"
        }
    ]
}
{% endschema %}