
{% for block in section.blocks %}
	{% assign block_type = block.type  %} 
	
	{% case block_type %}
	{%- when 'quality' -%}
	
	<div class="home herobanner" style="background:#fff;">
		<div class="herobanner_top">
			<a href="{{ block.settings.button_url }}">
				<img 
				srcset="{%- if block.settings.product_img.width >= 535 -%}{{ block.settings.product_img | image_url: width: 535 }} 535w,{%- endif -%}     
				{%- if block.settings.product_img.width >= 750 -%}{{ block.settings.product_img | image_url: width: 500 }} 750w,{%- endif -%}
				{%- if block.settings.product_img.width >= 1070 -%}{{ block.settings.product_img | image_url: width: 1070 }} 1070w,{%- endif -%}
				{{ block.settings.product_img| image_url: width: 1920 }}"				
                data-old-src="{{ block.settings.product_img | image_url: width: 1920 }}"
                fetchpriority="high"
				alt=""
                class="">
				
			</a>
		</div>
		<div class="herobanner_bottom">
			<p class="hero-reviews">{{ block.settings.stars_text }}</p>
			<a href="{{ block.settings.button_url }}">
				<h4 class="subheading">{{ block.settings.sub_heading }}</h4>
				<h1 >{{ block.settings.heading }}</h1>
				<p class="subtitle" >{{ block.settings.sub_title }}</p>
			</a>
			<a href="{{ block.settings.button_url }}" class="btn" title="{{block.settings.button_text}}">{{block.settings.button_text}}</a>
			<span class="shipping_message">{{ block.settings.shipping_text }}</span>
		</div>
	</div>
	{%- when 'product' -%}
	<div class="home herobanner product-banner">
		<div class="herobanner_top">
			<a href="{{ block.settings.button_url }}">
				<img 
				srcset="{%- if block.settings.product_img.width >= 535 -%}{{ block.settings.product_img | img_url: '535x' }} 535w,{%- endif -%}
				{%- if block.settings.product_img.width >= 750 -%}{{ block.settings.product_img | img_url: '750x' }} 750w,{%- endif -%}
				{%- if block.settings.product_img.width >= 1070 -%}{{ block.settings.product_img | img_url: '1070x' }} 1070w,{%- endif -%}
				{{ block.settings.product_img| img_url: '1920x' }}"				
                data-src="{{ block.settings.product_img | img_url: '1920x' }}"
				alt="" 
                class="">
				
			</a>
		</div>
		<div class="herobanner_bottom">
			
			<a href="{{ block.settings.button_url }}">
				<h4 class="subheading">{{ block.settings.sub_heading }}</h4>
				<h1 >{{ block.settings.heading }}</h1>
				<p class="subtitle" >{{ block.settings.sub_title }}</p>
			</a>
			<a href="{{ block.settings.button_url }}" class="btn" title="{{block.settings.button_text}}">{{block.settings.button_text}}</a>
			<span class="shipping_message">{{ block.settings.shipping_text }}</span>
		</div>
	</div>
	{% endcase %}
{% endfor %}

